{% extends 'base.html.twig' %}

{% block title %}Admin des catégories | {{ parent() }}{% endblock %}

{% block body %}
    <section class="container mt-4">
        <h1 class="text-center">Administration des catégories</h1>
        <a href="{{ path('admin.categories.create') }}" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Ajouter une catégorie</a>
        <div class="row gy-4 mt-4">
            {% for category in categories %}
                <div class="col-md-4">
                    <div class="card p-4">
                        <h2 class="card-content-header">{{ category.title }}</h2>
                        <div class="mt-4 mb-4 rounded" style="background-color: {{ category.color }}; height: 10px;"></div>
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="{{ path('admin.categories.update', {'id': category.id}) }}" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Modifer</a>
                            {% include 'backend/category/_deleteForm.html.twig' %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
