{% extends 'base.html.twig' %}

{% block title %}Admin des catégories | {{ parent() }}{% endblock %}

{% block body %}
    <section class="container mt-4">
        <h1 class="text-center">Administration des catégories</h1>
        <a href="{{ path('admin.categories.create') }}" class="btn btn-primary">Ajouter une catégorie</a>
        <div class="row gy-4 mt-4">
            {% for categorie in categories %}
                <div class="col-md-4">
                    <div class="card">
                        {{ categorie.title }}
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
