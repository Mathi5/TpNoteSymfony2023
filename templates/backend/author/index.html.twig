{% extends 'base.html.twig' %}

{% block title %}Admin des auteurs | {{ parent() }}{% endblock %}

{% block body %}
    <section class="container mt-4">
        <h1 class="text-center">Administration des auteurs</h1>
        <a href="{{ path('admin.authors.create') }}" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Ajouter un auteur</a>
        <div class="row gy-4 mt-4">
            {% for author in authors %}
                <div class="col-md-4">
                    <div class="card p-4">
                        <h2 class="card-content-header">{{ author.fullName }}</h2>
                        <hr>
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="{{ path('admin.authors.update', {'id': author.id}) }}" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Modifer</a>
                            {% include 'backend/author/_deleteForm.html.twig' %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
